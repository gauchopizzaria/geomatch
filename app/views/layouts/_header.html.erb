<header class="site-header">
  <div class="container">
    <%= link_to root_path, class: "brand" do %>
      <%= image_tag "logo-geomatch.svg", alt: "GeoMatch", class: "logo" %>
    <% end %>

    <% if user_signed_in? %>
      <nav class="nav">
        <%= link_to "Meu Perfil", edit_profile_path, class: "nav-link" %>

        <%= button_to "Sair",
              destroy_user_session_path,
              method: :delete,
              class: "logout-btn",
              data: { turbo_confirm: "Deseja realmente sair?" } %>
      </nav>
    <% else %>
      <nav class="nav">
        <%= link_to "Entrar", new_user_session_path, class: "nav-link" %>
        <%= link_to "Cadastrar", new_user_registration_path, class: "nav-link highlight" %>
      </nav>
    <% end %>
  </div>
</header>
